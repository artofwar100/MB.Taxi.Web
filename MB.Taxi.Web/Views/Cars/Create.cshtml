@model MB.Taxi.Web.Models.Car.CarCreateEditVM
@using utilities.Enum;
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h1>Create</h1>

    <h4>Car</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PlateNumber" class="control-label"></label>
                    <input asp-for="PlateNumber" class="form-control" />
                    <span asp-validation-for="PlateNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MakeYear" class="control-label"></label>
                    <input asp-for="MakeYear" class="form-control" />
                    <span asp-validation-for="MakeYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FuelType" class="control-label"></label>
                    <select asp-for="FuelType" asp-items="@Html.GetEnumSelectList<FuelType>();" class="form-control"></select>
                    <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarType" class="control-label"></label>
                    <select asp-for="CarType" asp-items="@Html.GetEnumSelectList<CarType>();" class="form-control"></select>
                    <span asp-validation-for="CarType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
