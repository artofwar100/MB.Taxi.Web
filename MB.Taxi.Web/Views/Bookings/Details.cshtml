@model MB.Taxi.Web.Models.Booking.BookingVM

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <h1>Details</h1>

    <div>
        <h4>Booking</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PickUpTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PickUpTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FromAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FromAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ToAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ToAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsPaid)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsPaid)
            </dd>
            <dt class="col-sm-2">
                Car
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.Name)
            </dd>
            <dt class="col-sm-2">
                Driver
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Driver.Name)
            </dd>
        </dl>
    </div>
    <hr />
    <table id="myTable" class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    PhonoNumber
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Passangers)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.PhonoNumber
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>